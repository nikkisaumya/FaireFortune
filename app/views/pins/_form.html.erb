<%= simple_form_for(@pin, html: {multipart: true}) do |f| %> <%#this is for  the image uploading%>
	<% if @pin.errors.any? %>
		<div id="error_explanation">
			<h2> <%= pluralize(@pin.errors.count, "error") %>
			This  pin shall be prevented from saving </h2>
			<ul>
				<% @pin.errors.full_messages.each do |msg| %>
			 		<li><%= msg %></li>
				<% end %> 
			</ul>
		</div>
	<% end %>
	
	<div class="form-group" >
		<%= f.input :image, input_html: {class: 'form-control'} %>
		<%= f.input :resume, input_html: {class: 'form-control'} %>
		<%= f.input :title, input_html: {class: 'form-control'} %>
		<%= f.input :description, input_html: {class: 'form-control'} %>
		<%= f.input :skills, input_html: {class: 'form-contrl'} %>
		<%= f.select :location, options_for_select([ "Bangalore", "Chennai" ], "Bangalore"), {}, { class: 'form-control' } %><br>
		<%= f.button :submit, class: "btn btn-primary" %>
		
    </div>
	<% end %>


